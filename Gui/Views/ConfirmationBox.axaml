<Window
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="160"
	x:Class="OpenLoco.Gui.Views.ConfirmationBox"
	WindowStartupLocation="CenterOwner"
	Width="480"
	Height="320"
	ShowInTaskbar="False"
	Title="Delete">
	<DockPanel>
		<TextBlock Name="Title" DockPanel.Dock="Top" HorizontalAlignment="Center" >Confirmation Box</TextBlock>
		<TextBlock Name="Message" DockPanel.Dock="Top" HorizontalAlignment="Center">Are you sure you would like to delete?</TextBlock>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Margin="4">No</Button>
			<Button Margin="4" Background="DarkRed" >Yes</Button>
		</StackPanel>
	</DockPanel>
</Window>

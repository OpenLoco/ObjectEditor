<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vmg="using:Gui.ViewModels.Graphics"
	xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
	xmlns:pgc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
	xmlns:amxc="using:Avalonia.Markup.Xaml.Converters"
	xmlns:gmc="using:Gui.Models.Converters"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Gui.Views.ImageView"
	x:DataType="vmg:ImageViewModel">

	<Design.DataContext>
		<vmg:DesignImageViewModel/>
	</Design.DataContext>

	<ScrollViewer>
		<DockPanel>
			<Panel Width="16" DockPanel.Dock="Right"></Panel>
			<pgc:PropertyGrid DataContext="{Binding}" IsCategoryVisible="False" />
		</DockPanel>
	</ScrollViewer>

</UserControl>
